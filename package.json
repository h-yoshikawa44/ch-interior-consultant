{
  "name": "ch-interior-consultant",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:h-yoshikawa44/ch-interior-consultant.git",
  "author": "h-yoshikawa44 <43331308+h-yoshikawa44@users.noreply.github.com>",
  "homepage": "https://h-yoshikawa44.github.io/ch-interior-consultant/",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint-check": "yarn lint:eslint && yarn lint:stylelint && yarn check:prettier",
    "lint:eslint": "yarn run -s eslint \"./js/**/*.js\"",
    "lint:stylelint": "yarn run -s stylelint \"./css/**/*.css\"",
    "check:prettier": "yarn run -s prettier --check \"./**/*.{html,js,ts,json}\"",
    "fix": "yarn fix:eslint && yarn fix:stylelint && yarn fix:prettier",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:stylelint": "yarn lint:stylelint --fix",
    "fix:prettier": "yarn check:prettier --write",
    "deploy": "yarn build && gh-pages -d dist",
    "prepare": "simple-git-hooks || echo 'Can not set git hooks'"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.7",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "gh-pages": "^3.2.3",
    "lint-staged": "^12.1.2",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.7.0",
    "stylelint": "^14.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^2.5.0",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-order": "^5.0.0",
    "vite": "^2.6.14"
  },
  "dependencies": {
    "wicg-inert": "^3.1.1"
  },
  "volta": {
    "node": "16.13.0",
    "yarn": "1.22.17"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn run -s lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "prettier --write --loglevel=error",
      "eslint --fix --quiet"
    ],
    "css/**/*.css": [
      "stylelint --fix --quiet"
    ],
    "./**/*.{html,json}": [
      "prettier --write --loglevel=error"
    ]
  }
}
